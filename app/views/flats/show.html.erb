<div class="container">
  <h1 class="test-typo mt-5 mb-5"><%= @flat.name %></h1>
  <%= cl_image_tag @flat.photo.key, height: 600, width: 800 %>
  <div class="flat-show mt-5">
    <div class="description">
      <h2 class="test-typo-flat">Address</h2>
      <p><%= @flat.address %></p>
      <h2 class="test-typo-flat">Details</h2>
      <p><%= @flat.description %></p>
    </div>
    <div class="number">
      <h2 class="test-typo-flat">Number of guests</h2>
      <p><%= @flat.number_of_guests %> <i class="fa-solid fa-user-group"></i></p>
      <h2 class="test-typo-flat">Price per night</h2>
      <p><%= @flat.price_per_night %>â‚¬</p>
    </div>
    <%= link_to "Back", flats_path, class: "back-btn-show" %>
    <%= link_to "Edit", edit_flat_path(@flat), class: "edit-btn"  %>
    <%= link_to "Delete", flat_path(@flat), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "delete-btn" %>
  </div>
</div>
